<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="com.led.led.KettleControl"
    android:background="@color/grey">>

    <Button
        android:id="@+id/button1"
        style="@style/AppTheme"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/holo_red_light"
        android:text="ATSIJUNGTI"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        android:text="0"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button4"
        style="@style/AppTheme"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_above="@+id/button1"
        android:layout_alignLeft="@+id/button1"
        android:layout_alignStart="@+id/button1"
        android:layout_marginBottom="19dp"
        android:background="@android:color/holo_green_light"
        android:elevation="0dp"
        android:text="VIRTI"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Switch
        android:id="@+id/switcheris"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_below="@+id/textView5"
        android:layout_marginEnd="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="12dp"
        tools:checked="false" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Nustatyti temperatūrą" />


    <com.marcinmoskala.arcseekbar.ArcSeekBar
        android:id="@+id/defaultSeekBar"
        android:layout_width="300dp"
        android:layout_height="240dp"
        android:layout_below="@+id/switcheris"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/defaultSeekBar"
        android:layout_alignEnd="@+id/defaultSeekBar"
        android:text="60"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView4"
        android:layout_toEndOf="@+id/textView4"
        android:text="°C"
        android:textSize="30sp"
        android:textStyle="bold" />

</RelativeLayout>
